@require(_variables)
.splash-wrapper
	width 100%
	height 600px
	position relative
	background-color color_darkest_section
	.splash-bg
		width 100%
		height 100%
		position absolute
		background-image url('/img/splash-bg.png')	
		background-size 100%
		opacity 0.5
		// margin 40px 40px
	.logo
		position relative
		z-index 3
		max-width 50%
		height 100%
		background-image url('/img/splash.png')
		margin 0px auto
		background-size 100%
		background-repeat no-repeat
		background-position 50% 50%
.about-us
	position relative
	width 100%
	height 700px
	margin-top 0px
	background-color color_bright_section
	background-image url(/img/pattern.png)
	background-size 50%
	overflow hidden
	h2
		font-size 1.5625rem
		text-align center
		font-family font_serif
		color color_dark_section
		letter-spacing 2px
		margin-top 20px
		// margin 10px auto
	p
		margin 50px auto
		font-size 1.25rem
		color color_darkest_section
		padding 0px 100px
.our-philosophy
	position relative
	width 100%
	height 1600px
	background-color color_darkest_section
	overflow hidden
	h2 
		font-size 1.5625rem
		font-family font_serifs
		color color_bright_section
		letter-spacing 2px
		// padding 20px
		text-align center
	.mini-section-1
		width 100%
		height 300px
		overflow hidden
		margin 50px 200px
		svg
			height 150px
			width 150px
		.section-1
			display inline-block
		.brain-text
			height 150px
			width 400px
			margin 100px
			// color #FFF
			// padding 20px
			// overflow hidden
			p
				color #FFF !important
				text-align center
				font-family font_sans_serif
				font-size 20px
				// margin 10px
				
	
