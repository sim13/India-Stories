@require(_variables)

@media screen and (max-width 1400px)
	html
		font-size 15px
@media screen and (max-width 1000px)
	html
		font-size 14px
@media screen and (max-width 800px)
	html
		font-size 13px
@media screen and (max-width 400px)
	html
		font-size 12px

first-breakpoint = 600px

.splash-wrapper
	width 100%
	height 40.5rem
	position relative
	background-color color_darkest_section
	background-image url(/img/pattern_dark.png)
	@media (max-width first-breakpoint)
		height 65rem
	.splash-bg
		width 100%
		height 100%
		position absolute
		background-image url('/img/splash-bg.jpg')	
		background-size 100%
		@media (max-width 1100px)
			background-size 120%
		@media (max-width first-breakpoint)
			background-size 250%
			
		opacity 0.7
	.logo
		position relative
		z-index 3
		box-sizing border-box
		// max-width 50%
		width 100%
		max-width 1000px
		height 100%
		background-image url('/img/splash.png')
		@media (max-width first-breakpoint)
			margin-top 10px;
			background-size 65%
			background-image url('/img/logo-vertical.png')
		margin 0px auto
		background-size 90%
		background-repeat no-repeat
		background-position 50% 50%
	h2
		font-family font_sans_serif
		text-transform uppercase
		color color_white
		font-size 1.475rem
		letter-spacing 0.625rem
		position relative
		bottom 6.25rem
		text-align center
		font-weight 800
		padding 0 20px
		@media (max-width first-breakpoint)
			font-size 1.8rem
			bottom 10rem
		
hr
	max-width 300px
	height 1px
	border none
	background-color #123
	opacity 0.1
.about-us
	position relative
	width 100%
	margin-top 0px
	padding 2.5rem
	box-sizing border-box
	background-color color_bright_section
	background-image url(/img/pattern.png)
	background-size 50%
	overflow hidden
	h2
		font-size 1.5625rem
		text-align center
		font-family font_serif
		color color_dark_section
		letter-spacing 4px
		margin-top 1.25rem
		@media (max-width first-breakpoint)
			font-size 3.4rem
	p
		margin 3.125rem auto
		font-size 1.25rem
		font-family font_sans_serif
		line-height 1.5
		color color_darkest_section
		padding 0px 6.25rem
		max-width 900px
		@media (max-width first-breakpoint)
			padding 2rem
			margin 2rem auto
			font-size 2.25rem
		em
			font-family font_serif
			font-weight 800
			font-style normal
.our-philosophy
	position relative
	width 100%
	background-image url(/img/pattern_dark.png)
	overflow hidden
	padding 2.5rem 12.5rem
	box-sizing border-box
	text-align center
	@media (max-width first-breakpoint)
		padding 3.4rem 0rem
	@media (max-width 1200px)
		padding 3.4rem 8rem
	hr
		background-color #FFF
		margin-bottom 6.25rem
	h2 
		font-size 1.5625rem
		font-family font_serif
		color color_bright_section
		letter-spacing 4px
		margin-top 1.25rem
		text-align center
		@media (max-width first-breakpoint)
			font-size 3.2rem
	article.mini-section
		text-align: center
		margin 1.625rem 0
		max-width 50%
		@media (max-width first-breakpoint)
			max-width 100%
		display: inline-block
		vertical-align top
		overflow hidden
		.svg-icon
			// display inline-block
			vertical-align middle
			svg
				height 9.375rem
				width 9.375rem
				@media (max-width first-breakpoint)
					height 15rem
					width 15rem
				// width 150px
		.text-wrapper
			display inline-block
			vertical-align middle
			@media screen and (max-width 1800px)
				max-width 30rem
			margin 3.125rem
			margin-top 2.5rem
			@media (max-width first-breakpoint)
				margin 0rem
			h3
				font-size 1.5625rem
				font-family font_serif
				font-weight 200
				color color_bright_section
				text-align center
				margin 0 auto
				@media (max-width first-breakpoint)
					font-size 3.2rem
			p
				color #FFF !important
				text-align center
				font-family font_sans_serif
				font-size 1.25rem
				@media (max-width first-breakpoint)
					font-size 2.5rem

section.bg-image-grid
	height 20.125rem
	@media (max-width first-breakpoint)
		height auto
	article
		vertical-align middle
		display: inline-block
		min-width 18.75rem
		width 50%
		padding 2.5rem 3.125rem
		box-sizing border-box
		text-align center
		height 100%
		@media (max-width first-breakpoint)
			width 100%
			padding 6rem 3.125rem
		&.vision
			background-image url(/img/1.jpg)
			background-size 100%
			background-position 50% 0%
		&.mission
			background-image url(/img/2.jpg)
			background-size 100%
			background-position 50% 100%
		color #FFF
	h2
		font-family font_serif
		font-size 2rem
		@media (max-width first-breakpoint)
			font-size 3.1rem
	p
		font-family font_sans_serif
		font-size 1.3rem
		line-height 1.5
		@media (max-width first-breakpoint)
			font-size 2.5rem
		
section.proposition
	color white
	text-align: center
	width 100%
	padding 3rem
	@media (max-width first-breakpoint)
		padding 6rem 3rem
	box-sizing border-box
	background-image url(/img/3.jpg)
	background-size 100%
	font-family font_sans_serif
	h2
		font-family font_serif
		font-size 2rem
		@media (max-width first-breakpoint)
			font-size 3.1rem
		
	p
		margin 0px auto
		padding 2px
		// border-bottom 1px solid color_bright_section
		font-family font_sans_serif
		font-size 1.3rem
		line-height 1.5
		max-width 1000px
		display inline-block
		@media (max-width first-breakpoint)
			font-size 2.5rem
	
