@require(_variables)

@media screen and (max-width 1400px)
	html
		font-size 15px
@media screen and (max-width 1000px)
	html
		font-size 14px
@media screen and (max-width 800px)
	html
		font-size 13px
@media screen and (max-width 400px)
	html
		font-size 12px

.splash-wrapper
	width 100%
	height 37.5rem
	position relative
	background-color color_darkest_section
	.splash-bg
		width 100%
		height 100%
		position absolute
		background-image url('/img/splash-bg.jpg')	
		background-size 100%
		opacity 0.5
	.logo
		position relative
		z-index 3
		max-width 50%
		height 100%
		background-image url('/img/splash.png')
		margin 0px auto
		background-size 100%
		background-repeat no-repeat
		background-position 50% 50%
	h2
		font-family font_sans_serif
		text-transform uppercase
		color color_white
		font-size 1.875rem
		letter-spacing 4px
		position relative
		top -150px
		text-align center
		font-weight 50
		
hr
	max-width 300px
	height 1px
	border none
	background-color #123
	opacity 0.1
.about-us
	position relative
	width 100%
	margin-top 0px
	padding 2.5rem
	box-sizing border-box
	background-color color_bright_section
	background-image url(/img/pattern.png)
	background-size 50%
	overflow hidden
	h2
		font-size 1.5625rem
		text-align center
		font-family font_serif
		color color_dark_section
		letter-spacing 4px
		margin-top 1.25rem
	p
		margin 3.125rem auto
		font-size 1.25rem
		font-family font_sans_serif
		line-height 1.5
		color color_darkest_section
		padding 0px 6.25rem
		max-width 900px
		em
			font-family font_serif
			font-weight 800
			font-style normal
.our-philosophy
	position relative
	width 100%
	// height 1600px
	background-color color_darkest_section
	background-image url(/img/pattern_dark.png)
	overflow hidden
	padding 2.5rem 12.5rem
	box-sizing border-box
	hr
		background-color #FFF
		margin-bottom 6.25rem
	h2 
		font-size 1.5625rem
		font-family font_serif
		color color_bright_section
		letter-spacing 4px
		margin-top 1.25rem
		text-align center
	article.mini-section
		text-align: center
		margin 0.625rem auto
		min-width 50%
		// min-width 500px
		display: inline-block
		vertical-align top
		overflow hidden
		.svg-icon
			// display inline-block
			vertical-align middle
			svg
				height 150px
				// width 150px
		.text-wrapper
			display inline-block
			vertical-align middle
			@media screen and (max-width 1800px)
				max-width 30rem
			@media screen and (max-width 1500px)
				max-width 25rem
			@media screen and (max-width 1300px)
				max-width 18rem
			@media screen and (max-width 1000px)
				max-width 14rem
			margin 3.125rem
			margin-top 2.5rem
			h3
				font-size 1.5625rem
				font-family font_serif
				font-weight 200
				color color_bright_section
				text-align center
				margin 0 auto
			p
				color #FFF !important
				text-align center
				font-family font_sans_serif
				font-size 1.25rem

section.bg-image-grid
	height 20.125rem
	article
		vertical-align middle
		display: inline-block
		min-width 18.75rem
		width 50%
		padding 2.5rem 3.125rem
		box-sizing border-box
		text-align center
		height 100%
		&.vision
			background-image url(/img/1.jpg)
			background-size 100%
			background-position 50% 0%
		&.mission
			background-image url(/img/2.jpg)
			background-size 100%
			background-position 50% 100%
		color #FFF
	h2
		font-family font_serif
		font-size 2rem
	p
		font-family font_sans_serif
		font-size 1.3rem
		line-height 1.5
		
section.proposition
	color white
	text-align: center
	width 100%
	padding 3rem
	box-sizing border-box
	background-image url(/img/3.jpg)
	background-size 100%
	font-family font_sans_serif
	h2
		font-family font_serif
		font-size 2rem
	p
		margin 10px auto
		padding 5px
		// border-bottom 1px solid color_bright_section
		font-family font_sans_serif
		font-size 1.3rem
		line-height 1.5
		max-width 1000px
		display inline-block
	
