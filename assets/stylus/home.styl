@require(_variables)

@media screen and (max-width 1400px)
	html
		font-size 15px
@media screen and (max-width 1000px)
	html
		font-size 14px
@media screen and (max-width 800px)
	html
		font-size 13px
@media screen and (max-width 400px)
	html
		font-size 12px

.splash-wrapper
	width 100%
	height 37.5rem
	position relative
	background-color color_darkest_section
	.splash-bg
		width 100%
		height 100%
		position absolute
		background-image url('/img/splash-bg.jpg')	
		background-size 100%
		opacity 0.5
	.logo
		position relative
		z-index 3
		max-width 50%
		height 100%
		background-image url('/img/splash.png')
		margin 0px auto
		background-size 100%
		background-repeat no-repeat
		background-position 50% 50%
hr
	max-width 300px
	height 1px
	border none
	background-color #123
	opacity 0.1
.about-us
	position relative
	width 100%
	margin-top 0px
	padding 2.5rem
	box-sizing border-box
	background-color color_bright_section
	background-image url(/img/pattern.png)
	background-size 50%
	overflow hidden
	h2
		font-size 1.5625rem
		text-align center
		font-family font_serif
		color color_dark_section
		letter-spacing 4px
		margin-top 1.25rem
	p
		margin 3.125rem auto
		font-size 1.25rem
		font-family font_sans_serif
		line-height 1.5
		color color_darkest_section
		padding 0px 6.25rem
.our-philosophy
	position relative
	width 100%
	// height 1600px
	background-color color_darkest_section
	background-image url(/img/pattern_dark.png)
	overflow hidden
	padding 2.5rem 12.5rem
	box-sizing border-box
	hr
		background-color #FFF
		margin-bottom 6.25rem
	h2 
		font-size 1.5625rem
		font-family font_serif
		color color_bright_section
		letter-spacing 4px
		margin-top 1.25rem
		text-align center
	article.mini-section
		text-align: center
		margin 0.625rem auto
		min-width 50%
		// min-width 500px
		display: inline-block
		vertical-align top
		overflow hidden
		.svg-icon
			// display inline-block
			vertical-align middle
			svg
				height 150px
				// width 150px
		.text-wrapper
			display inline-block
			vertical-align middle
			max-width 25rem
			margin 3.125rem
			margin-top 2.5rem
			h3
				font-size 1.5625rem
				font-family font_serif
				font-weight 200
				color color_bright_section
				text-align center
				margin 0 auto
			p
				color #FFF !important
				text-align center
				font-family font_sans_serif
				font-size 1.25rem

section.bg-image-grid
	height 21.875rem
	article
		vertical-align middle
		display: inline-block
		min-width 18.75rem
		width 33.3333%
		padding 2.5rem 3.125rem
		box-sizing border-box
		text-align center
		height 100%
		&.vision
			background-image url(/img/1.jpg)
			background-size 100%
			background-position 50% 0%
		&.mission
			background-image url(/img/2.jpg)
			background-size 100%
			background-position 50% 100%
		&.proposition
			background-image url(/img/3.jpg)
			background-size 100%
		color #FFF
		h2
			font-family font_serif
			font-size 2rem
		p
			font-family font_sans_serif
			font-size 1.2rem
			line-height 1.5
		
			
	
