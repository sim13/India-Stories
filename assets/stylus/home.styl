@require(_variables)
.splash-wrapper
	width 100%
	height 600px
	position relative
	background-color color_darkest_section
	.splash-bg
		width 100%
		height 100%
		position absolute
		background-image url('/img/splash-bg.png')	
		background-size 100%
		opacity 0.5
		// margin 40px 40px
	.logo
		position relative
		z-index 3
		max-width 50%
		height 100%
		background-image url('/img/splash.png')
		margin 0px auto
		background-size 100%
		background-repeat no-repeat
		background-position 50% 50%
.about-us
	position relative
	width 100%
	height 400px
	margin-top 0px
	background-color color_bright_section
	background-image url(/img/pattern.png)
	background-size 50%
	overflow hidden
	h2
		font-size 1.5625rem
		font-family font_serif
		color color_bright_section
		letter-spacing 2px