@require(_variables)
.leadership
	.image-wrapper
		position relative
		height 600px
		width 100%
		.image
			background-image url('/img/india-stories.JPG')
			background-size 105%
			background-repeat no-repeat
			// background-size 600px
			z-index 5
			position absolute
			top 0px
			left 0px
			width 100%
			height 600px
			overflow hidden
	h1
		font-family font_serif
		letter-spacing 2px
		color color_bright_section
		font-size 3.75rem
		width 100%
		text-align center
		top 200px
		// padding 100px
		// text-align center
		position absolute
		z-index 6
		// text-align center
	.team-members
		position relative
		width 100%
		background-color color_dark_section
		background-image url(/img/pattern_dark.png)
		background-size 100%
		.member
			display inline-block
			width 40%
			margin-left 120px
			margin-top 50px
			vertical-align top
			h2
				font-size 2.1875rem !important
				color color_bright_section !important
				font-family font_serif !important
				font-weight 300 
			p
				font-family font_sans_serif !important
				color color_white !important
				font-size 1.25rem
				padding-bottom 40px
			em
				color color_bright_section !important
				font-weight 700 !important
				font-style normal