@require(_variables)
.leadership
	
	.leadership-splash-wrapper
		position relative
		height 700px
		width 100%
		overflow hidden
		box-sizing border-box
		.leadership-image
			position absolute
			width 100%
			height 100%
			top 0
			left 0
			background-image url('/img/india-stories.jpg')
			background-size 100%
			background-repeat no-repeat
		h1
			z-index 3
			font-family font_serif
			color color_bright_section
			color color_white
			font-size 2.75rem
			font-weight 100
			letter-spacing 6px
			position absolute
			text-align center
			top 180px
			width 100%
		hr
			position relative
			z-index 90
			top 270px
			opacity 0.3
			background-color color_bright_section
	.team-members
		position relative
		width 100%
		background-color color_dark_section
		background-image url(/img/pattern_dark.png)
		background-size 100%
		.member
			display inline-block
			width 40%
			margin-left 120px
			margin-top 50px
			vertical-align top
			h2
				font-size 2.1875rem !important
				color color_bright_section !important
				font-family font_serif !important
				font-weight 300 
			p
				font-family font_sans_serif !important
				color color_white !important
				font-size 1.25rem
				padding-bottom 40px
			em
				color color_bright_section !important
				font-weight 700 !important
				font-style normal