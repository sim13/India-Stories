@require(_variables)
first-breakpoint = 600px
.back-to-top-icon
	position fixed
	// background-color #000
	bottom 20px
	right 20px
	opacity 0.7
	size = 60px
	width size
	height size
	background-size 80% 80%
	background-image: url('data:image/svg+xml;base64,');
	background-position 50% 50%
	background-repeat no-repeat
	transform rotateZ(-90deg)
	cursor pointer
	background-color #FFF
	border-radius 100px
	transition 0.2s ease-out
	&:hover
		opacity 1

	
#footer
	// margin-top 200px
	// min-height 300px
	width 100%
	overflow hidden
	background-image url(/img/pattern.png)
	background-size 50%
	// opacity 0.5
	&:before
		content " "
		position absolute
		width 100%
		height 20px
		background-color #000
		opacity 0.1
	
	.contact-info-box
		padding 1.25rem 6.25rem
		padding-bottom 2.5rem
		@media (max-width first-breakpoint)
			text-align center
		h3
			font-family font_serif
			font-weight 100
			font-size 2rem
			margin 0
		h4
			margin 10px 0
			padding 0
			line-height 1.3
			font-family font_sans_serif
			font-size 1.4rem
			font-weight 300
			span
				display: block
				line-height 1.5
		h5
			margin 10px 0
			display inline-block
			font-family font_sans_serif
			font-weight 300
			padding 10px
			font-size 1.4rem
			letter-spacing 2px
			border 1px solid color_pink
			line-height 30px
			vertical-align middle
		.email-icon
			display: inline-block
			margin 0 10px
			vertical-align middle
			svg
				height 20px
	.copyright
		display: block
		white-space nowrap
		font-size 1.2rem
		font-family font_sans_serif
		font-weight 300
		text-align: center
		letter-spacing 1px
		// max-width 1000px
		margin 0 auto
		// background-color rgba(1,1,1,0.6)
		.bold 
			font-weight 700
		span
			display: inline-block
			padding 10px 5px
			padding-bottom 20px
	.social-icons
		padding 40px 100px
		padding-bottom 0