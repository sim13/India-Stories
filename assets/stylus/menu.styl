@require(_variables)
.menu-wrapper
	width 100%
	// height 100px
	background-color color_white
	padding 0px 0px
	margin 0px 0px
	position fixed
	z-index 100
	top 0px
	box-sizing border-box
	.menu
		padding 0
		padding-left 2rem
		.menu-item
			font-family font_sans_serif
			color color_bright_section
			opacity 0.8
			font-size 1.25rem
			cursor pointer
			font-weight 700
			display inline-block
			@media (max-width 600px)
				font-size 1.8rem !important
			margin 0.625rem 1.25rem
			padding-bottom 5px
			cursor pointer
			font-weight 700
			
			// opacity 0.3
			transition 0.2s ease-out
			&:hover
				opacity 1
				transform scale(1.2, 1.2)
			&.home
				font-family font_sans_serif
				font-weight 700
				color color_bright_section
				border none
				opacity 1
			
			