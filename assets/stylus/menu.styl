@require(_variables)
.menu-wrapper
	width 100%
	// height 100px
	background-color color_white
	padding 0px 0px
	margin 0px 0px
	position fixed
	z-index 100
	top 0px
	box-sizing border-box
	.menu
		// padding 10px
		.menu-item
			font-family font_serif
			color #000
			font-size 1.25rem
			@media (max-width 600px)
				font-size 2rem !important
			margin 0.625rem 1.25rem
			display inline-block
			padding-bottom 5px
			border-bottom 1px dashed color_bright_section
			cursor pointer
			opacity 0.3
			transition 0.2s ease-out
			&:hover
				opacity 1
			&.home
				font-family font_sans_serif
				font-weight 700
				color color_bright_section
				border none
				opacity 1
			
			